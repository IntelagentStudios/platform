# Production Environment Variables
# Copy this file to .env.production and fill in your values

# Database Configuration
DATABASE_URL=your_production_database_url

# Authentication
JWT_SECRET=your_secure_jwt_secret
MASTER_LICENSE_KEY=your_master_license_key
NEXTAUTH_URL=https://yourdomain.com
NEXTAUTH_SECRET=your_nextauth_secret

# n8n Webhook Configuration (Required)
N8N_WEBHOOK_URL=https://your-n8n-instance.com/webhook/chatbot
N8N_SETUP_WEBHOOK=https://your-n8n-instance.com/webhook/setup-agent
CHAT_MODE=n8n

# OpenAI Configuration (Optional - only if not using n8n)
# OPENAI_API_KEY=sk-proj-your-api-key

# Widget Configuration
NEXT_PUBLIC_WIDGET_URL=https://yourdomain.com
NEXT_PUBLIC_API_URL=https://yourdomain.com/api

# Node Environment
NODE_ENV=production