# Stripe Configuration
# Add these to your .env file or Railway environment variables

# Stripe API Keys
STRIPE_SECRET_KEY=sk_live_YOUR_SECRET_KEY_HERE
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY=pk_live_YOUR_PUBLISHABLE_KEY_HERE

# Stripe Webhook Secret (get this after creating webhook endpoint)
STRIPE_WEBHOOK_SECRET=whsec_YOUR_WEBHOOK_SECRET_HERE

# Stripe Price IDs (create these in Stripe Dashboard or via API)
# Starter Plan
STRIPE_PRICE_STARTER_MONTHLY=price_YOUR_STARTER_MONTHLY_ID
STRIPE_PRICE_STARTER_ANNUAL=price_YOUR_STARTER_ANNUAL_ID

# Professional Plan  
STRIPE_PRICE_PRO_MONTHLY=price_YOUR_PRO_MONTHLY_ID
STRIPE_PRICE_PRO_ANNUAL=price_YOUR_PRO_ANNUAL_ID

# Enterprise Plan
STRIPE_PRICE_ENTERPRISE_MONTHLY=price_YOUR_ENTERPRISE_MONTHLY_ID
STRIPE_PRICE_ENTERPRISE_ANNUAL=price_YOUR_ENTERPRISE_ANNUAL_ID

# Add-ons
STRIPE_PRICE_EXTRA_CHATBOT=price_YOUR_EXTRA_CHATBOT_ID
STRIPE_PRICE_SALES_AGENT=price_YOUR_SALES_AGENT_ID
STRIPE_PRICE_ENRICHMENT_CREDITS=price_YOUR_ENRICHMENT_CREDITS_ID

# Application URLs
NEXT_PUBLIC_APP_URL=https://dashboard.intelagentstudios.com